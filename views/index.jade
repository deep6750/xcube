doctype html(lang='en')
head
		title Xcube
		link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(href='/stylesheets/style.css' rel='stylesheet')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
		style(type='text/css', media='screen').
			#editor {
			height:100%;
			}
	body(style="overflow:auto")
		#editor.col-md-8
		
		#result.col-md-4
			.form-group
				label
				select.form-control.languageSelector#languageSelector(onchange="changeLanguage()" name="lang" required)
					option(value="1" selected=(language=="1") ) C 
					option(value="2" selected=(language=="2") ) C++ 
					option(value="9" selected=(language=="9")) C# 
					option(value="3"  selected=(language=="3")) Java
					option(value="20"  selected=(language=="20")) Javascript 
					option(value="5" selected=(language=="5") ) Python
                    
			#compile
				#compileResponse
					textarea.customInput(placeholder="Custom input here each seperated by a new line.")
				#compileButton
					button.compileButton() COMPILE & RUN

			#run
				#runResponse 
				#submitButton
					button.submitButton(disabled) By Team Xcube (Final Year Project 1042,1047,1082)
			#submit

		

		script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.6/ace.js', type='text/javascript', charset='utf-8')
		script.
			var editor = ace.edit("editor");
			editor.setValue("/* Type Your Code Here */");
			editor.setTheme("ace/theme/tomorrow_night");
			editor.setFontSize(16);
			editor.getSession().setMode("ace/mode/#{langCode}");
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
		|     
		script(src='/javascripts/bootstrap.min.js')
		script(src="/javascripts/jquery.js")
		script(src="/javascripts/compile.js")
